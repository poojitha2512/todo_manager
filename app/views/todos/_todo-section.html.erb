  <section class="Todosection">
      <label class="TodosectionTitle">
        <p class="TodosectionTitle-text"><%= section_title %></p>
        <p class="TodosectionTitle-count"><%= todos.completed.count%>/<%= todos.count %></p>
      </label>

      <ul>
      <% todos.all.each do |todo| %>

        <li class="TodoItem">
          <label class="TodoItem-container">
          <%= form_with(url: "/todos/#{todo.id}", method="put") do %>
            <input
              class="Todo-checkbox"
              name="completed"
              type="checkbox" <%=todo.completed ? "checked" : ""%>
              onclick="this.form.submit()"
            >
            <input type="submit" value="Update">
            <% end %>
            <p class='<%= todo.completed ? "TodoItem-completedText": ""%>'>
            <%=todo.todo_text%>
            </p>
            <% if show_due_date %>
                   <p class="TodoItem-dueDate">
                   <%=todo.due_date.to_s(:short)%></p>
            <%end%>
            <img class="TodoItem-delete" src="trashcan.svg">
          </label>
        </li>

      <% end %>
      </ul>
  </section>
